    <MudIconButton Icon="@(LayoutService.DarkModeToggle == ThemeMode.System ? @Icons.Material.Filled.AutoMode : LayoutService.DarkModeToggle == ThemeMode.Dark ? @Icons.Material.Rounded.LightMode : @Icons.Material.Outlined.DarkMode)" 
        Color="Color.Inherit" OnClick="@LayoutService.ToggleDarkModeAsync"/>
</MudTooltip>
