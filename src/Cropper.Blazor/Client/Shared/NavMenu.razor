@using System.Linq
@using System.Text.RegularExpressions

<MudText Typo="Typo.subtitle1" Class="mt-1 mb-2 ml-2 d-flex d-md-none"><b>Docs</b></MudText>
<MudNavLink Href="demo" Class="docs-single-link">Demo</MudNavLink>
<MudNavGroup Title="Examples" Expanded="@(_section == "examples")" ExpandIcon="@Icons.Material.Filled.ExpandMore">
    @foreach (var link in MenuService.Examples)
    {
        <MudNavLink Href="@link.Href">@link.Title</MudNavLink>
    }
</MudNavGroup>
<MudNavGroup Title="API" Expanded="@(_section == "api")" ExpandIcon="@Icons.Material.Filled.ExpandMore">
    @foreach (var title in MenuService.Api.GroupBy(x => x.Group).Select(x => x.Key))
    {
        <div class="docs-css-api-header">
            @title
        </div>
        @foreach (var link in MenuService.Api.Where(x => x.Group == title))
        {
            <MudNavLink Href="@link.Href" Match="NavLinkMatch.All">@link.Title</MudNavLink>
        }
    }
</MudNavGroup>
