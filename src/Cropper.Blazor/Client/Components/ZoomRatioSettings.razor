<MudCard Class="d-flex justify-space-between flex-column mb-6">
    <MudCardContent>
        <MudText>Zoom Ratio Settings</MudText>
        <MudNumericField @bind-Value="MinZoomRatio"
                         Label="Min zoom ratio"
                         Min="0"
                         Max="MaxZoomRatio">
        </MudNumericField>
        <MudNumericField @bind-Value="MaxZoomRatio"
                         Label="Max zoom ratio"
                         Min="MinZoomRatio ?? 0">
        </MudNumericField>
        <MudText Class="mt-4">
            Zoom event old ratio: @OldRatio
        </MudText>
        <MudText Class="mt-1">
            Zoom event ratio: @Ratio
        </MudText>
    </MudCardContent>
</MudCard>
