@page "/demo"
@using Cropper.Blazor.Components

<MudContainer Class="mt-5 px-4">
    <MudGrid Class="mt-2">
        <MudItem xl="12" lg="12" md="12" sm="12" xs="12">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudGrid>
                        <MudItem md="9">
                            <div class="img-container">
                                <CropperComponent Class="cropper-demo"
                                                  @ref="cropperComponent"
                                                  OnCropStartEvent="OnCropStartEvent"
                                                  OnCropEndEvent="OnCropEndEvent"
                                                  OnCropEvent="OnCropEvent"
                                                  OnZoomEvent="OnZoomEvent"
                                                  OnCropMoveEvent="OnCropMoveEvent"
                                                  OnReadyEvent="OnCropReadyEvent"
                                                  OnLoadImageEvent="OnLoadImageEvent"
                                                  Src="https://fengyuanchen.github.io/cropperjs/images/picture.jpg"
                                                  Options="options">

                                </CropperComponent>
                            </div>
                        </MudItem>
                        <MudItem md="3">
                            <div class="docs-preview clearfix">
                                <div class="img-preview preview-lg"></div>
                                <div class="img-preview preview-md"></div>
                                <div class="img-preview preview-sm"></div>
                                <div class="img-preview preview-xs"></div>
                            </div>
                            <div class="docs-data">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataX">X</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataX" @bind-value="@x" placeholder="x">
                                    <span class="input-group-append">
                                        <span class="input-group-text">px</span>
                                    </span>
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataY">Y</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataY" @bind-value="@y" placeholder="y">
                                    <span class="input-group-append">
                                        <span class="input-group-text">px</span>
                                    </span>
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataWidth">Width</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataWidth" @bind-value="@width" placeholder="width">
                                    <span class="input-group-append">
                                        <span class="input-group-text">px</span>
                                    </span>
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataHeight">Height</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataHeight" @bind-value="@height" placeholder="height">
                                    <span class="input-group-append">
                                        <span class="input-group-text">px</span>
                                    </span>
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataRotate">Rotate</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataRotate" @bind-value="@rotate" placeholder="rotate">
                                    <span class="input-group-append">
                                        <span class="input-group-text">deg</span>
                                    </span>
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataScaleX">ScaleX</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataScaleX" @bind-value="@scaleX" placeholder="scaleX">
                                </div>
                                <div class="input-group input-group-sm">
                                    <span class="input-group-prepend">
                                        <label class="input-group-text" for="dataScaleY">ScaleY</label>
                                    </span>
                                    <input type="text" class="form-control" id="dataScaleY" @bind-value="@scaleY" placeholder="scaleY">
                                </div>
                            </div>
                        </MudItem>
                        <div class="row" id="actions">
                            <div class="col-md-9 docs-buttons">
                                <!-- <h3>Toolbar:</h3> -->
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" title="Move" @onclick="SetMoveDragMode">
                                        <span class="docs-tooltip" data-toggle="tooltip">
                                            <span class="fa fa-arrows-alt"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" title="Crop" @onclick="SetCropDragMode">
                                        <span class="docs-tooltip" data-toggle="tooltip">
                                            <span class="fa fa-crop-alt"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="zoom" data-option="0.1" title="Zoom In" @onclick="@(()=>Zoom(0.1m))">
                                        <span class="docs-tooltip" data-toggle="tooltip">
                                            <span class="fa fa-search-plus"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="zoom" data-option="-0.1" title="Zoom Out" @onclick="@(()=>Zoom(-0.1m))">
                                        <span class="docs-tooltip" data-toggle="tooltip">
                                            <span class="fa fa-search-minus"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="move" data-option="-10" data-second-option="0" title="Move Left" @onclick="@(()=>Move(-10, 0))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.move(-10, 0)">
                                            <span class="fa fa-arrow-left"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="move" data-option="10" data-second-option="0" title="Move Right" @onclick="@(()=>Move(10, 0))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.move(10, 0)">
                                            <span class="fa fa-arrow-right"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="move" data-option="0" data-second-option="-10" title="Move Up" @onclick="@(()=>Move(0, -10))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.move(0, -10)">
                                            <span class="fa fa-arrow-up"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="move" data-option="0" data-second-option="10" title="Move Down" @onclick="@(()=>Move(0, 10))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.move(0, 10)">
                                            <span class="fa fa-arrow-down"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="rotate" data-option="-45" title="Rotate Left" @onclick="@(()=>Rotate(-45))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.rotate(-45)">
                                            <span class="fa fa-undo-alt"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="rotate" data-option="45" title="Rotate Right" @onclick="@(()=>Rotate(45))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.rotate(45)">
                                            <span class="fa fa-redo-alt"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="scaleX" data-option="-1" title="Flip Horizontal" @onclick="@(()=>ScaleX(-1m*scaleX))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.scaleX(-1)">
                                            <span class="fa fa-arrows-alt-h"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="scaleY" data-option="-1" title="Flip Vertical" @onclick="@(()=>ScaleY(-1m*scaleY))">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.scaleY(-1)">
                                            <span class="fa fa-arrows-alt-v"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="crop" title="Crop" @onclick="Crop">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.crop()">
                                            <span class="fa fa-check"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="clear" title="Clear" @onclick="Clear">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.clear()">
                                            <span class="fa fa-times"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="disable" title="Disable" @onclick="Disable">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.disable()">
                                            <span class="fa fa-lock"></span>
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-primary" data-method="enable" title="Enable" @onclick="Enable">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.enable()">
                                            <span class="fa fa-unlock"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" data-method="reset" title="Reset" @onclick="Reset">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.reset()">
                                            <span class="fa fa-sync-alt"></span>
                                        </span>
                                    </button>
                                    <label class="btn btn-primary btn-upload" for="inputImage" title="Upload image file">
                                        <input type="file" class="sr-only" id="inputImage" name="file" accept="image/*">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="Import image with Blob URLs">
                                            <span class="fa fa-upload"></span>
                                        </span>
                                    </label>
                                    <button type="button" class="btn btn-primary" data-method="destroy" title="Destroy" @onclick="Destroy">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.destroy()">
                                            <span class="fa fa-power-off"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="btn-group btn-group-crop">
                                    <button type="button" class="btn btn-success" data-method="getCroppedCanvas" data-option="{ &quot;maxWidth&quot;: 4096, &quot;maxHeight&quot;: 4096 }">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getCroppedCanvas({ maxWidth: 4096, maxHeight: 4096 })">
                                            Get Cropped Canvas
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-success" data-method="getCroppedCanvas" data-option="{ &quot;width&quot;: 160, &quot;height&quot;: 90 }">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getCroppedCanvas({ width: 160, height: 90 })">
                                            160&times;90
                                        </span>
                                    </button>
                                    <button type="button" class="btn btn-success" data-method="getCroppedCanvas" data-option="{ &quot;width&quot;: 320, &quot;height&quot;: 180 }">
                                        <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getCroppedCanvas({ width: 320, height: 180 })">
                                            320&times;180
                                        </span>
                                    </button>
                                </div>

                                <button type="button" class="btn btn-secondary" data-method="getData" data-option data-target="#putData" @onclick="@(()=>GetData(false))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getData()">
                                        Get Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="setData" data-target="#putData" @onclick="@(()=>SetData(new Models.SetDataOptions(){ X = cropperData.X, Y = cropperData.Y, Height = cropperData.Height, Width = cropperData.Width, Rotate = cropperData.Rotate, ScaleX = cropperData.ScaleX, ScaleY = cropperData.ScaleY}))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.setData(data)">
                                        Set Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="getContainerData" data-option data-target="#putData" @onclick="GetContainerData">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getContainerData()">
                                        Get Container Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="getImageData" data-option data-target="#putData" @onclick="GetImageData">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getImageData()">
                                        Get Image Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="getCanvasData" data-option data-target="#putData" @onclick="GetCanvasData">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getCanvasData()">
                                        Get Canvas Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="setCanvasData" data-target="#putData" @onclick="@(()=>SetCanvasData(new Models.SetCanvasDataOptions(){ Height = canvasData.Height, Left = canvasData.Left, Top = canvasData.Top, Width = canvasData.Width}))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.setCanvasData(data)">
                                        Set Canvas Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="getCropBoxData" data-option data-target="#putData" @onclick="(()=>GetCropBoxData())">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.getCropBoxData()">
                                        Get Crop Box Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="setCropBoxData" data-target="#putData" @onclick="(()=>SetCropBoxData(new Models.SetCropBoxDataOptions(){ Height = cropBoxData.Height, Left = cropBoxData.Left, Top = cropBoxData.Top, Width = cropBoxData.Width}))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.setCropBoxData(data)">
                                        Set Crop Box Data
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="moveTo" data-option="0" @onclick="@(()=>MoveTo(0, 0))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.moveTo(0)">
                                        Move to [0,0]
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="zoomTo" data-option="1" @onclick="@(()=>ZoomTo(1, 0, 0))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.zoomTo(1)">
                                        Zoom to 100%
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="rotateTo" data-option="180" @onclick="@(()=>Rotate(180))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.rotateTo(180)">
                                        Rotate 180°
                                    </span>
                                </button>
                                <button type="button" class="btn btn-secondary" data-method="scale" data-option="-2" data-second-option="-1" @onclick="@(()=>Scale(-2 * scaleX, -1 * scaleY))">
                                    <span class="docs-tooltip" data-toggle="tooltip" title="cropper.scale(-2, -1)">
                                        Scale (-2, -1)
                                    </span>
                                </button>
                                <div class="docs-data">
                                    <div>Cropper Data</div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataX">X</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataX" @bind-value="@cropperData.X" placeholder="x">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataY">Y</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataY" @bind-value="@cropperData.Y" placeholder="y">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataWidth">Width</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataWidth" @bind-value="@cropperData.Width" placeholder="width">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Height</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataHeight" @bind-value="@cropperData.Height" placeholder="height">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataRotate">Rotate</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataRotate" @bind-value="@cropperData.Rotate" placeholder="rotate">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataScaleX">ScaleX</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataScaleX" @bind-value="@cropperData.ScaleX" placeholder="scaleX">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataScaleY">ScaleY</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataScaleY" @bind-value="@cropperData.ScaleY" placeholder="scaleY">
                                    </div>
                                </div>
                                <div class="docs-data">
                                    <div>Container Data</div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Height</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataHeight" @bind-value="@containerData.Height" placeholder="height">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Width</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataWidth" @bind-value="@containerData.Width" placeholder="width">
                                    </div>
                                </div>
                                <div class="docs-data">
                                    <div>Image Data</div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Height</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataHeight" @bind-value="@imageData.Height" placeholder="height">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Width</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataWidth" @bind-value="@imageData.Width" placeholder="width">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataRotate">Rotate</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataRotate" @bind-value="@imageData.Rotate" placeholder="rotate">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataScaleX">ScaleX</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataScaleX" @bind-value="@imageData.ScaleX" placeholder="scaleX">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataScaleY">ScaleY</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataScaleY" @bind-value="@imageData.ScaleY" placeholder="scaleY">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataNaturalHeight">Natural Height</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataNaturalHeight" @bind-value="@imageData.NaturalHeight" placeholder="naturalHeight">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataNaturalWidth">Natural Width</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataNaturalWidth" @bind-value="@imageData.NaturalWidth" placeholder="naturalWidth">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataAspectRatio">Aspect Ratio</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataAspectRatio" @bind-value="@imageData.AspectRatio" placeholder="aspectRatio">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataLeft">Left</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataLeft" @bind-value="@imageData.Left" placeholder="left">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataTop">Top</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataTop" @bind-value="@imageData.Top" placeholder="top">
                                    </div>
                                </div>                                
                                <div class="docs-data">
                                    <div>Canvas Data</div>                                    
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataLeft">Left</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataLeft" @bind-value="@canvasData.Left" placeholder="left">
                                    </div>                                    
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataTop">Top</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataTop" @bind-value="@canvasData.Top" placeholder="top">
                                    </div>                                    
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataNaturalHeight">Natural Height</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataNaturalHeight" @bind-value="@canvasData.NaturalHeight" placeholder="naturalHeight">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataNaturalWidth">Natural Width</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataNaturalWidth" @bind-value="@canvasData.NaturalWidth" placeholder="naturalWidth">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Height</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataHeight" @bind-value="@canvasData.Height" placeholder="height">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataHeight">Width</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataWidth" @bind-value="@canvasData.Width" placeholder="width">
                                    </div>
                                </div>
                                <div class="docs-data">
                                    <div>Crop Box Data</div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataTop">Top</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataTop" @bind-value="@cropBoxData.Top" placeholder="top">
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-prepend">
                                            <label class="input-group-text" for="dataLeft">Left</label>
                                        </span>
                                        <input type="text" class="form-control" id="dataLeft" @bind-value="@cropBoxData.Left" placeholder="left">
