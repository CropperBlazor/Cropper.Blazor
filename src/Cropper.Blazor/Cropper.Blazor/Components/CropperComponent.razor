@using Models;

@if (IsErrorLoadImage == true)
{
    <img class="@ErrorLoadImageClass"
         @attributes="InputAttributes"
         src="@ErrorLoadImageSrc">
}
else
{
    if (CropperComponentType == CropperComponentType.Canvas)
    {
        <canvas @ref="ImageReference"
                class="@Class"
                @attributes="InputAttributes"
                @onerror="@OnErrorLoadImage"
                @onload="OnLoadImage">
        </canvas>
    }
    else
    {
        <img @ref="ImageReference"
             class="@Class"
             @attributes="InputAttributes"
             @onerror="@OnErrorLoadImage"
             @onload="OnLoadImage"
             src="@Src">
    }
}
