@if (IsErrorLoadImage == true)
{
    <img
     class="@ErrorLoadImageClass"
     @attributes="InputAttributes"
     src="@ErrorLoadImageSrc">
}
else
{
    <img @ref="imageReference"
     class="@Class"
     @attributes="InputAttributes"
     @onerror="@OnErrorLoadImage"
     @onload="OnLoadImage"
     src="@Src">
}
